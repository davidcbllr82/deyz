<div class="">
  <p class="hover-underline-animation">Friends</p>
</div>

  <div class="grid-friends">
    <% @profiles.each do |profile| %>
      <%= link_to profile_path(profile), class: 'profile-link' do %>
        <div class="profile-card">
          <%= cl_image_tag(profile.profile_avatar, class: 'avatar')%>
          <%= profile.username %>
        </div>
      <% end %>
    <% end %>
  </div>

