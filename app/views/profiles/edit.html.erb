<div>
  <div class="title-page">
    <h1 class="neon" data-text="Sign up" contenteditable></h1>
    <div class="gradient"></div>
    <div class="spotlight"></div>
  </div>
  <%= simple_form_for(current_user, url: profile_path) do |e| %>
  <div class="form-edit-profile">
    <%= e.label :username %>
    <%= e.text_field :username %>
    <%= e.input :date_of_birth,
                as: :date, start_year: Date.today.year - 90,
                end_year: Date.today.year - 12,
                discard_day: false,
                order: [:day, :month, :year] %>

      <%= e.label :location %>
      <%= e.text_field :location %>

      <%= e.label :bio %>
      <%= e.text_field :bio %>

      <%= e.input :profile_avatar %>
      <%= e.input :profile_avatar_cache, as: :hidden %>

      <%= e.input :profile_banner %>
      <%= e.input :profile_banner_cache, as: :hidden %>
<!-- upload for favorite spotify songs -->
      <%= e.label :spotify_top_1 %>
      <%= e.text_field :spotify_top_1%>

      <%= e.label :spotify_top_2 %>
      <%= e.text_field :spotify_top_2%>

      <%= e.label :spotify_top_3 %>
      <%= e.text_field :spotify_top_3%>

      <%= e.label :spotify_top_4 %>
      <%= e.text_field :spotify_top_4%>

      <%= e.label :spotify_top_5 %>
      <%= e.text_field :spotify_top_5%>

      <%= e.submit %>
  <% end %>
  </div>
</div>
