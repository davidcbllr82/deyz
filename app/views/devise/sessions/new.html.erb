
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: 'uk-input uk-width-2-child' } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: 'uk-input uk-width-2-child' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center mouse-tracking">
    <%= f.button :submit, "LOG IN" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>



