<!-- // FORM FOR EVENTS // -->
<!-- ********************************************* -->

<%= simple_form_for(@event) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.input :scheduled_at, as: :datetime, html5: true %>

  <!-- photo for event avatar -->
  <%= f.input :banner %>
  <%= f.input :banner_cache, as: :hidden %>

  <%= f.input :event_avatar %>
  <%= f.input :event_avatar_cache, as: :hidden %>

  <%= f.label :spotify_uri %>
  <%= f.text_field :spotify_uri %>

  <%= f.submit %>
<% end %>
